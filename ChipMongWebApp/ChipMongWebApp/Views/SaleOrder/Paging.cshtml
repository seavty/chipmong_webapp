@using ChipMongWebApp.Utils.Extension
@using ChipMongWebApp.Models.DTO.SaleOrder
@using ChipMongWebApp.Models.DTO.Customer
@model ChipMongWebApp.Models.DTO.GetListDTO<ChipMongWebApp.Models.DTO.SaleOrder.SaleOrderViewDTO>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr class="text-center">
            <th scope="col" width="65px">#</th>
            <th scope="col"> <a href="#" id="sort_@nameof(SaleOrderViewDTO.code)" class="sort-data" onclick='javascript:sort("@nameof(SaleOrderViewDTO.code)", $(this))'> Code </a>  </th>
            <th scope="col"> <a href="#" id="sort_@nameof(SaleOrderViewDTO.date)" class="sort-data" onclick='javascript:sort("@nameof(SaleOrderViewDTO.date)", $(this))'> Date </a>  </th>
            <th scope="col"> <a href="#" id="sort_@nameof(CustomerViewDTO.firstName)" class="sort-data" onclick='javascript:sort("@nameof(CustomerViewDTO.firstName)", $(this))'> Customer </a>  </th>
            <th scope="col"> <a href="#" id="sort_@nameof(SaleOrderViewDTO.total)" class="sort-data" onclick='javascript:sort("@nameof(SaleOrderViewDTO.total)", $(this))'> Total </a>  </th>
            <th scope="col"> <a href="#" id="sort_@nameof(SaleOrderViewDTO.status)" class="sort-data" onclick='javascript:sort("@nameof(SaleOrderViewDTO.status)", $(this))'> Status </a>  </th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0;}
        @foreach (var item in Model.items)
        {

            <tr>
                <th scope="row" class="text-center"> @(Model.metaData.startRow + i) </th>
                <td class="align-middle"> <a href=" @Url.Content("~/saleorder/view/")@item.id"> @item.code </a> </td>
                <td> @item.date.ToDisplayDate() </td>
                <td> @item.customer.firstName @item.customer.lastName </td>
                <td class="text-right"> @item.total.ThousandSeparator() </td>
                <td> @item.status </td>

            </tr>
            i++;

        }

        @Html.Partial("~/Views/Shared/Pagination.cshtml", Model.metaData)




