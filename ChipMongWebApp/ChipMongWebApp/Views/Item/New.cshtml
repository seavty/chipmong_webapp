@model ChipMongWebApp.Models.DTO.Item.ItemViewDTO
@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Main/_Main.cshtml";
}

<div class="card" id="action">
    <div class="card-body text-dark shadow-sm merienda">
        <button type="button" class="btn btn-success" id="btnSave"> <i class="fas fa-save"></i>  Save  </button>
        <button type="button" class="btn btn-danger" id="btnCancel"> <i class="fas fa-times"></i> Cancel  </button>
    </div>
</div>

<br />

<form id="record" name="record">
    @Html.AntiForgeryToken()
    <div class="card shadow-sm">
        <div class="card-header merienda"> Item </div>

        <!-- card body -->
        <div class="card-body">

            <!--row 1-->
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.code)
                        @Html.TextBoxFor(m => m.code, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.name)
                        @Html.TextBoxFor(m => m.name, new { @class = "form-control required", placeholder = "Name", @maxlength = "100" })
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.price)
                        @Html.TextBoxFor(m => m.price, new { @class = "form-control required", placeholder = "Price", @maxlength = "100" })
                    </div>
                </div>

            </div>
            <!--end  row 1-->

        </div>
    </div>
    <!-- end card body -->
</form>

<script>

    var endPoint = "@Url.Content("~/item")";

    $(document).ready(function () { setupEvents(); });

    //-> setupEvents
    function setupEvents() {
        $("#btnSave").click(function () { save(); });
        $("#btnCancel").click(function () { cancel(); });
    }

    //-> save
    function save() {
        if (isValid()) {
            ajaxHelper(endPoint + "/new", $("#record").serializeObject(), requestMethod.POST).then(function (data) {
                window.location.href = endPoint + "/view/" + data.id;
            });
        }
    }

    //-> cancel
    function cancel() { window.location.href = endPoint + "/find"; }

</script>

