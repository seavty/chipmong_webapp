@using ChipMongWebApp.Utils.Helpers
@using ChipMongWebApp.Utils.Extension
@model ChipMongWebApp.Models.DTO.Item.ItemViewDTO
@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Main/_Main.cshtml";
}

<div class="card" id="action">
    <div class="card-body text-dark shadow-sm merienda">
        @Html.Partial("~/Views/Shared/Template/ViewMode/Button.cshtml")
    </div>
</div>

<br />

<form id="record" name="record">
    <fieldset disabled class="summary">
        <div class="card shadow-sm">
            <div class="card-header merienda"> Item </div>


            <!-- card body -->
            <div class="card-body">

                <!--row 1-->
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.code)
                            @Html.TextBoxFor(m => m.code, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.name)
                            @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.price)
                            @Html.TextBoxFor(m => m.price, new { @class = "form-control", Value = Model.price.ToTwoDecimalPoint() })
                        </div>
                    </div>

                </div>
                <!--end  row 1-->

            </div>
        </div>
        <!-- end card body -->
    </fieldset>
</form>

<script src="~/Content/js/function/template/viewmode/button.js"></script>
<script>
    const controller = "@ConstantHelper.ITEM_CONTROLLER";
    const id = @Url.RequestContext.RouteData.Values["id"];
</script>


