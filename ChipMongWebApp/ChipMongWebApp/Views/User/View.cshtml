@using ChipMongWebApp.Models.DTO.User
@model ChipMongWebApp.Models.DTO.User.UserViewDTO
@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Main/_Main.cshtml";
}

<div class="card" id="action">
    <div class="card" id="action">
        <div class="card-body text-dark shadow-sm merienda">
            <button type="button" class="btn btn-dark" id="btnBack"> <i class="fas fa-long-arrow-alt-left"></i> Back </button>
            <button type="button" class="btn btn-primary" id="btnEdit"> <i class="fas fa-pencil-alt"></i> Edit </button>



            @if (@ViewContext.RouteData.Values["id"].ToString() != "1")
            {
                <button type="button" class="btn btn-danger" id="btnDelete"> <i class="fas fa-trash-alt"></i> Delete </button>
            }





        </div>
    </div>
</div>

<br />

<form id="record" name="record">
    <fieldset disabled class="summary">
        <div class="card shadow-sm">
            <div class="card-header merienda"> User </div>

            <!-- card body -->
            <div class="card-body">

                <!--row 1-->
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(m => m.userName)
                            @Html.TextBoxFor(m => m.userName, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(m => m.firstName)
                            @Html.TextBoxFor(m => m.firstName, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(m => m.lastName)
                            @Html.TextBoxFor(m => m.lastName, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <!--end  row 1-->
                <!--row 2-->
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(m => m.phoneNumber)
                            @Html.TextBoxFor(m => m.phoneNumber, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(m => m.email)
                            @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col">
                        <div class="form-group">
                        </div>
                    </div>
                </div>
                <!--end  row 2-->

            </div>
            <!-- end card body -->
        </div>

    </fieldset>
</form>

<script>

    var endPoint = "@Url.Content("~/user")";
    var id = @Url.RequestContext.RouteData.Values["id"];

    $(document).ready(function () {
        setupEvents();
    });

    //-> setupEvents
    function setupEvents() {
        $("#btnBack").click(function () { back(); });
        $("#btnEdit").click(function () { edit(); });
        $("#btnDelete").click(function () { deleteRecord(); });
    }

    //-> save
    function save() {
        if (isValid()) {
            ajaxHelper(endPoint + "/create", $("#record").serializeObject(), requestMethod.POST).then(function (data) {
                window.location.href = detailsURL + done.id;
            });
        }
    }

    //-> edit
    function edit() { window.location.href = endPoint + "/edit/" + id; }

    //-> back
    function back() { window.location.href = endPoint + "/find/"; }

    //-> deletRecord
    function deleteRecord() {
        if (confirm("Do you want to delete this record?")) {
            ajaxHelper(endPoint + "/delete/" + id, null, requestMethod.POST).then(function (data) {
                window.location.href = endPoint + "/find/";
            });
        }
    }

</script>


