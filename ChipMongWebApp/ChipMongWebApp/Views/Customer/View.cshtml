@using ChipMongWebApp.Utils.Helpers
@model ChipMongWebApp.Models.DTO.Customer.CustomerViewDTO
@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Main/_Main.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb shadow-sm">
        <li class="breadcrumb-item active" aria-current="page"> Customer </li>
        <li class="breadcrumb-item"> <a href="javascript:onclick=saleorderTab()"> SaleOrder </a></li>
        <li class="breadcrumb-item"> <a href="javascript:onclick=sourceSupplyTab()"> Source Supply </a></li>
    </ol>
</nav>


<div class="card" id="action">
    <div class="card-body text-dark shadow-sm merienda">
        @Html.Partial("~/Views/Shared/Template/ViewMode/Button.cshtml")
    </div>
</div>


<br />

<form id="record" name="record">
    <fieldset disabled class="summary">
        <div class="card shadow-sm">
            <div class="card-header merienda"> Customer </div>

            <!-- card body -->
            <div class="card-body">

                <!--row 1-->
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.code)
                            @Html.TextBoxFor(m => m.code, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.firstName)
                            @Html.TextBoxFor(m => m.firstName, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.lastName)
                            @Html.TextBoxFor(m => m.lastName, new { @class = "form-control" })
                        </div>
                    </div>

                </div>
                <!--end  row 1-->
                <!--row 2-->
                <div class="row">

                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.phone1)
                            @Html.TextBoxFor(m => m.phone1, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.phone2)
                            @Html.TextBoxFor(m => m.phone2, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.email)
                            @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <!--end  row 2-->
                <!--row 3-->
                <div class="row">

                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.address)
                            @Html.TextAreaFor(m => m.address, new { @class = "form-control" })
                        </div>
                    </div>

                </div>
                <!--end  row 3-->

            </div>
        </div>
        <!-- end card body -->
    </fieldset>
</form>

<script src="~/Content/js/function/template/viewmode/button.js"></script>
<script>
    const controller = "@ConstantHelper.CUSTOMER_CONTROLLER";
    const id = @Url.RequestContext.RouteData.Values["id"];
</script>
