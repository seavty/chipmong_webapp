@model ChipMongWebApp.Models.DTO.Customer.CustomerViewDTO
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Main/_Main.cshtml";
}

<div class="card" id="action">
    <div class="card-body text-dark shadow-sm merienda">
        <button type="button" class="btn btn-success" id="btnSave"> <i class="fas fa-save"></i>  Save  </button>
        <button type="button" class="btn btn-danger" id="btnCancel"> <i class="fas fa-times"></i> Cancel  </button>
    </div>
</div>

<br />

<form id="record" name="record">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.id)
    <div class="card shadow-sm">
        <div class="card-header merienda"> Item </div>

        <!-- card body -->
        <div class="card-body">

            <!--row 1-->
            <div class="row">

                <div class="col-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.code)
                        @Html.TextBoxFor(m => m.code, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.firstName)
                        @Html.TextBoxFor(m => m.firstName, new { @class = "form-control required", placeholder = "First Name", @maxlength = "100" })
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.lastName)
                        @Html.TextBoxFor(m => m.lastName, new { @class = "form-control required", placeholder = "Last Name", @maxlength = "100" })
                    </div>
                </div>

            </div>
            <!--end  row 1-->

            <!--row 2-->
            <div class="row">

                <div class="col-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.phone1)
                        @Html.TextBoxFor(m => m.phone1, new { @class = "form-control required", placeholder = "Phone1", @maxlength = "100" })
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.phone2)
                        @Html.TextBoxFor(m => m.phone2, new { @class = "form-control", placeholder = "Phone2", @maxlength = "100" })
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.email)
                        @Html.TextBoxFor(m => m.email, new { @class = "form-control", placeholder = "E-mail", @maxlength = "100" })
                    </div>
                </div>
            </div>
            <!--end  row 2-->

            <!--row 3-->
            <div class="row">

                <div class="col-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.address)
                        @Html.TextAreaFor(m => m.address, new { @class = "form-control", placeholder = "Address", @maxlength = "100" })
                    </div>
                </div>

            </div>
            <!--end  row 3-->

        </div>
    </div>
    <!-- end card body -->
</form>

<script>

    var endPoint = "@Url.Content("~/customer")";
    var id = @Url.RequestContext.RouteData.Values["id"];

    $(document).ready(function () {
        setupEvents();
    });

    //-> setupEvents
    function setupEvents() {
        $("#btnSave").click(function () { save(); });
        $("#btnCancel").click(function () { cancel(); });
    }

    //-> save
    function save() {
        if (isValid()) {
            ajaxHelper(endPoint + "/edit", $("#record").serializeObject(), requestMethod.POST).then(function (data) {
                window.location.href = endPoint + "/view/" + data.id;
            });
        }
    }

    //-> cancel
    function cancel() { window.location.href = endPoint + "/view/" + id; }

</script>

