@model ChipMongWebApp.Models.DTO.Customer.CustomerFindDTO
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Main/_Main.cshtml";
}

<form name="findCustomer" id="findCustomer">
    @Html.AntiForgeryToken()

    <input type="hidden" name="currentPage" id="currentPage" value="1" />
    <div class="card shadow-sm" id="dvAction">
        <div class="card-body text-dark shadow-sm merienda">
            <button type="button" class="btn btn-primary" id="btnFind"> <i class="fas fa-search"></i> Find </button>
            <button type="button" class="btn btn-danger" id="btnCancel"> <i class="fas fa-times"></i> Clear  </button>
        </div>
    </div>

    <br />

    <div class="card shadow-sm">
        <div class="card-header merienda"> Find Customer </div>

        <div class="card-body">
            <div class="row">

                <div class="col">
                    <div class="form-group">
                        @Html.LabelFor(m => m.code)
                        @Html.TextBoxFor(m => m.code, new { @class = "form-control", placeholder = "Code", @maxlength = "100" })

                    </div>
                </div>

                <div class="col">
                    <div class="form-group">
                        @Html.LabelFor(m => m.firstName)
                        @Html.TextBoxFor(m => m.firstName, new { @class = "form-control", placeholder = "First Name", @maxlength = "100" })
                    </div>
                </div>

                <div class="col">
                    <div class="form-group">
                        @Html.LabelFor(m => m.lastName)
                        @Html.TextBoxFor(m => m.lastName, new { @class = "form-control", placeholder = "Last Name", @maxlength = "100" })
                    </div>
                </div>

            </div>
        </div>
    </div>

    <br />

    <div id="tableData" class="shadow-sm bg-white"></div>

    <br />


</form>

<script>

    var url = "@Url.Content("~/customer")";
    var pagingURL = url + "/paging/";
    var form = "#findCustomer";


    $(document).ready(function () {
        setupEvents();
    });

    //-> setupEvents
    function setupEvents() {
        paging(1);
        $("#btnFind").click(function () { find(); });
        $("#btnCancel").click(function () { cancel(); });
    }

    
    //-> getPage
    function paging(currentPage) {
        $("#currentPage").val(currentPage);
        ajaxHelper(pagingURL, $(form).serialize(), requestMethod.POST).then(function (done) {
            $("#tableData").html(done);
        });
    }

    //-> find
    function find() {
        $("#currentPage").val(1);
        paging(1);
    }
    

    //-> cancel
    function cancel() {
        location.reload();
    }
</script>

