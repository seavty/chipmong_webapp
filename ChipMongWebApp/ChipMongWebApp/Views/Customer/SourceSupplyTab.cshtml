@using ChipMongWebApp.Helpers
@model ChipMongWebApp.Models.DTO.SaleOrder.SaleOrderViewDTO
@{
    /**/

    /**/

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Main/_Main.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb shadow-sm">
        <li class="breadcrumb-item"> <a href="javascript:onclick=customerTab()"> Customer </a> </li>
        <li class="breadcrumb-item active"> <a href="javascript:onclick=saleorderTab()"> SaleOrder </a>  </li>
        <li class="breadcrumb-item active aria-current=" page""> Source Supply </li>
    </ol>
</nav>

<div class="card shadow-sm" id="dvAction">
    <div class="card-body text-dark shadow-sm merienda">
        <button type="button" class="btn btn-success" id="btnAddSourceSupply"> <i class="fas fa-plus"></i> Add Source Supply  </button>
    </div>
</div>

<br />
<form name="record" id="record">
    @Html.AntiForgeryToken()
    <input type="hidden" name="currentPage" id="currentPage" value="1" />
</form>
<div id="tableData" class="shadow-sm bg-white"></div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"> Source Supply </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form name="frmPopup" id="frmPopup">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                @Html.LabelFor(m => m.sourceOfSupplyID)
                                @Html.DropDownListFor(m => m.sourceOfSupplyID, SelectionHelper.SourceSupplySelection(0), null, new { @class = "form-control required" })
                                @Html.Hidden("dealerSupplyID")
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal"> <i class="fas fa-times"></i> Close</button>
                <button type="button" class="btn btn-success" id="btnAdd" onclick="add()"> <i class="fas fa-plus"></i> Add </button>
                <button type="button" class="btn btn-success" id="btnSave" onclick="save()"> <i class="fas fa-save"></i> Save </button>
            </div>
        </div>
    </div>
</div>

<script>

    var id = @Url.RequestContext.RouteData.Values["id"];
    var endPoint = "@Url.Content("~/customer")";
    var dealerSourceSupplyEndPoint = "@Url.Content("~/dealersourcesupply")";

    $(document).ready(function () {
        //paging(1);

        getDealerSourceSupply();

        $("#btnAddSourceSupply").click(function () {
            handleAddSourceSupply();
        });
    });

    //-> getDealerSourceSupply
    function getDealerSourceSupply() {
        ajaxHelper(endPoint + "/dealersourcesupply/" + id, null, requestMethod.POST).then(function (data) {
            $("#tableData").html(data);
        })
    }

    //-> getPage
    function paging(currentPage) {
        $("#currentPage").val(currentPage);
        ajaxHelper(endPoint + "/sourcesupplytabpaging/" + id + "/?currentPage=1", null, requestMethod.POST).then(function (data) {
            $("#tableData").html(data);
        });
    }

    function customerTab() {
        window.location.href = endPoint + "/view/" + id;
    }

    //-> saleorderTab
    function saleorderTab() {
        window.location.href = endPoint + "/saleordertab/" + id;
    }

    function handleAddSourceSupply() {
        $("#btnSave").hide();
        $("#btnAdd").show();
        $("#sourceOfSupplyID").css("border-color", "#ced4da");
        $("#sourceOfSupplyID").val("");
        $("#exampleModal").modal("show");
    }

    //-> add()
    function add() {
        if (isValid()) {
            ajaxHelper(endPoint + "/addsourcesupply/" + id + "/?sourceOfSupplyID=" + $("#sourceOfSupplyID").val(), $("#frmPopup").serializeObject(), requestMethod.POST).then(function (data) {
                window.location.reload();
            });
        }
        else {
            $("#sourceOfSupplyID").css("border-color", "red");
        }
    }

    //-> editDealerSourceSupply
    function editDealerSourceSupply(id, sourceSupplyID) {
        $("#sourceOfSupplyID").val(sourceSupplyID);
        $("#btnSave").show();
        $("#btnAdd").hide();
        $("#sourceOfSupplyID").css("border-color", "#ced4da");

        $("#dealerSupplyID").val(id);
        $("#exampleModal").modal("show");

    }

    //-> deleteDealerSourceSupply
    function deleteDealerSourceSupply(id) {
        if (confirm("Do you want to delee this record?")) {
            simpleAjax(dealerSourceSupplyEndPoint + "/delete/" + id, null, requestMethod.POST).then(function (data) {
                if (data == "ok")
                    window.location.reload();
            });
        }
    }

    //-> save
    function save() {
        if (isValid()) {
            ajaxHelper(dealerSourceSupplyEndPoint + "/edit/" + $("#dealerSupplyID").val() + "/?sourceOfSupplyID=" + $("#sourceOfSupplyID").val(), $("#frmPopup").serializeObject(), requestMethod.POST).then(function (data) {
                window.location.reload();
            });
        }
        else {
            $("#sourceOfSupplyID").css("border-color", "red");
        }
    }


</script>








